    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "esbuild": "^0.24.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "mysql2": "^3.11.5",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
