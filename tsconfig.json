{
  "compilerOptions": {
    "outDir": "compiled",
    "rootDirs": [
      "Packages/*",
      "Shared/*"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "Shared/*"
      ],
      "@tradingBot/*": [
        "Packages/TradingBot/*"
      ]
    }
  },
  "include": [
    "Packages/**/*",
    "Shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}