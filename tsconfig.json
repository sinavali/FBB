{
  "compilerOptions": {
    "outDir": "compiled",
    "rootDirs": [
      "Packages/*",
      "Shared/*"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "Packages/**/*",
    "Shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}